/* pages/subject/subject.wxss */
/* 顶部轮播图 */
.content {
  background-color: #f2f2f2;
}

.section image{
  width: 100%;
  height: 422rpx;
}

/* 操作按钮 */
.opr {
  display: flex;
  flex-direction: row;
}

.btn {
  display: flex;
  flex-direction: row;
  width: 43%;
  background-color: #fff;
  height: 92rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  line-height: 92rpx;
  border-radius: 10rpx;
}

.btn view {
  margin: 0 auto;
  margin-top: 3px;
}

.opr .btn image {
  width: 72rpx;
  height: 50rpx;
}

/* 菜谱列表 */
.list .item {
  display: flex;
  flex-direction: row;
  margin: 30rpx;
}

.desc {
  margin-left: 40rpx;
  line-height: 60rpx;
}

.title {
  font-weight: bold;
}

.count {
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
  color: #666;
}

.count image {
  margin-left: 20rpx;
  margin-top: 14rpx;
}

.hr {
  height: 1rpx;
  background-color: #ccc;
  opacity: 0.5;
}
